    <!--start container-->
    <div class="container clearfix">

        <div class="grid_3">
            <div class="budget_side">


                <!-- end ngRepeat: hotelClass in hotelFilterModel.hotelClasses -->

                @*<input type="button" class="styled-button-3" value="Filter" ng-click="filter()" />*@

                <a class="btn" ng-click="filter()" style="padding-bottom: 10px;">
                    <p style="background-color: #1bbc9b; padding: 5px 10px;">Filter</p>
                </a>

